<% provide(:title, "edit Task") %>
<h1>タスク編集</h1>

<div class="row">
 <div class="col-md-8 col-md-offset-2">
  <%= form_with(model: @task, url: user_task_path, local: true) do |f| %>
    <%= render 'shared/error_messages', object: @task %>
      
      <%= f.label :"名称", class: "label-signup" %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :"詳細", class: "label-signup" %>
      <%= f.text_area :description, rows: "5", cols: "50", class: "form-control" %>
      
      <%= f.submit "更新", class: "btn btn-primary btn-login pull-left" %>
  <% end %> 
 </div>
 </div>